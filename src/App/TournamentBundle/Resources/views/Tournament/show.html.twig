{% extends 'base.html.twig' %}

{% block title %} {{ tournament.name }} {% endblock %}

{% block header %} 
	{% if tournament.image is not null %}
	 	<img class='tournament-img-header' src='/public/images/custom/logo/{{ tournament.image }}'>
 	{% else %}
	 	<img class='tournament-img-header' src='/public/images/interface/default_logo.png'>
	{% endif %}
	{{ tournament.name }}
{% endblock %}

{% block content %}
<a class='link-back' href='{{ path("app_tournament_list") }}'><i class='fa fa-arrow-left'></i> К СПИСКУ ТУРНИРОВ</a>
<br>

<div class='tourlist'>
{# tours list #}
{% for i in range(1, calendar) %}
	{% if tour == i %}
		<div class='tourlist-active'>{{ i }}</div>
	{% else %}
		<div><a href="{{ path("app_tournament_show", {"id": tournament.id, "tour": i}) }}">{{ i }}</a></div>	
	{% endif %}
{% endfor %}
</div>

<div class='h3' id='tournumber'>{{ tour }} ТУР</div>

<table class='schedule'>
{% for game in showtour %}
	<tr>
		<td>{{ game.user1 }}</td>
		<td>-</td>
		<td>{{ game.user2 }}</td>
	</tr>
{% endfor %}
</table>

{% endblock %}