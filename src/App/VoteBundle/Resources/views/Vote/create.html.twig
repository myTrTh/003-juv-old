{% extends 'base.html.twig' %}

{% block title %} Опросы {% endblock %}

{% block header %} Опросы {% endblock %}

{% block content %}

<a class='link-back' href='{{ path('app_vote_list') }}'><i class='fa fa-arrow-left'></i> К списку опросов</a>
<br>

{# show flash info #}
{% include 'flashbug.html.twig' %}

<br>
<form method='post'>
	Тема опроса
	<input type='text' name='head'>
	Допустимое количество ответов (0 - неограничено)
	<input class='extra-small' type='text' name='checked' value='1'>
	Варианты ответа
	<div class='optionsgroup'>
		<input type="text" name="option[0]">
		<input type="text" name="option[1]">
	</div>
	<br>
	<span class='add' id='add_option'><i class='fa fa-plus'></i> Добавить</span>
	<span class='add' id='remove_option'><i class='fa fa-minus'></i> Удалить</span><br><br>
	<input class='button button-main' type='submit' name='create_vote' value='Создать'>
</form>

{% endblock %}