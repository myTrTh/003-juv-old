{% extends 'AppAdminBundle::baseadmin.html.twig' %}

{% block title %} Админка: Туры {% endblock %}

{% block lowheader %} {{ tournament.name }} {% endblock %}

{% block lowbody %}
<a class='link-back' href='{{ path("app_admin_tournament", {"tournament": tournament.id}) }}'><i class='fa fa-arrow-left'></i> НАЗАД</a>
<br><br>
<div class='tourlist'>
{# tours list #}
{% for i in range(1, calendar) %}
	{% if tour == i %}
		<div class='tourlist-active'>{{ i }}</div>
	{% else %}
		<div><a href="{{ path("app_admin_tours", {"tournament": tournament.id, "tour": i}) }}">{{ i }}</a></div>
	{% endif %}
{% endfor %}
</div>
<div class='h3' id='tournumber'>{{ tour }} ТУР</div>

{% if forecast != 0 %}

		<h5>Матчи</h5>
	{% for fore in forecast %}

	<form method='post'>
			<input class='small' type='text' name='date[]' value='{{ utc_to_locale(fore.timer) }}'>
			<input class='small' type='text' name='team1[]' value='{{ fore.team1 }}'>
			<input class='small' type='text' name='team2[]' value='{{ fore.team2 }}'>
	</form>

	{% endfor %}
	<input class='button button-main' type='submit' name='create_score' value='Обновить'>
	<br><br><hr><br>
{% endif %}

<form method='post'>
	<h5>Добавить матчи</h5>
<div class='scoregroup'>
	<div class='score'>
		<input class='small' type='text' name='date[]' placeholder="Дата">
		<select class='small' name='team1[]'>
			{% for team in teams %}
				<option>{{ team.name }}</option>
			{% endfor %}
		</select>
		<select class='small' name='team2[]'>
			{% for team in teams %}
				<option>{{ team.name }}</option>
			{% endfor %}
		</select>
	</div>
	</div>
	<br>
	{% if forecast == 0 %}
		<span class='add' id='add_score'><i class='fa fa-plus'></i> Добавить</span>
		<span class='add' id='remove_score'><i class='fa fa-minus'></i> Удалить</span><br><br>		
		<input class='button button-main' type='submit' name='create_score' value='Создать'>
	{% else %}
		<input class='button button-main' type='submit' name='create_score' value='Добавить'>
	{% endif %}
</form>

