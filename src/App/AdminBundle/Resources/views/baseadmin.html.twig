{% extends 'base.html.twig' %}

{% block jscripts %}
    <script src="https://unpkg.com/flatpickr"></script>
    <script src='{{ asset('/public/js/admin.js') }}'></script>    
{% endblock %}
{% block stylescripts %}
    <link rel="stylesheet" href="https://unpkg.com/flatpickr/dist/flatpickr.min.css">    
{% endblock %}

{% block title %} Пользователи {% endblock %}

{% block header %} Админка {% endblock %}

{% block content %}
<ul class='admin-menu'>
	<li><a class='nostyle' href='{{ path('app_admin_users') }}'>Пользователи</a></li>
	<li><a class='nostyle' href='{{ path('app_admin_guestbook') }}'>
		Штаб
        {% if notification_adminbook is defined and notification_adminbook|length > 0 %} 
			<span class='normal little'><i class='fa fa-bell-o'></i> {{ notification_adminbook|length }}
        {% endif %}
	</a></li>
	{% if is_granted('ROLE_MODERATE') %}
		<li><a class='nostyle' href='{{ path('app_admin_content') }}'>Контент</a></li>
		<li><a class='nostyle' href='{{ path('app_admin_upload') }}'>Загрузка</a></li>
		<li><a class='nostyle' href='{{ path('app_admin_numbers') }}'>Номера</a></li>
		<li><a class='nostyle' href='{{ path('app_admin_nach') }}'>Нахи</a></li>
		<li><a class='nostyle' href='{{ path('app_admin_achives') }}'>Нашивки</a></li>
		<li><a class='nostyle' href='{{ path('app_admin_champions') }}'>Чемпионы</a></li>
		<li><a class='nostyle' href='{{ path('app_admin_tournaments') }}'>Турниры</a></li>
	{% endif %}
	{% if is_granted('ROLE_ADMIN') %}
		<li><a class='nostyle' href='{{ path('app_admin_headteams') }}'>Команды</a></li>
	{% endif %}
</ul>

	<h3>{% block lowheader %}

	{% endblock %}</h3>

	{% block lowbody %}

	{% endblock %}

{% endblock %}