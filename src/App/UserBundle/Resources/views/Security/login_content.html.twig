{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    ЛОГИН
    <input type="text" class="middle" id="username" name="_username" value="{{ last_username }}" required="required" />        
    ПАРОЛЬ
    <input type="password" class="middle" id="password" name="_password" required="required" />

    <input type="checkbox" id="remember_me" name="_remember_me" value="on" /> Запомнить меня<br>

    <input type="submit" class="button button-main" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />

</form>

<br><br>
